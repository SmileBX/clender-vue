/**index.wxss**/
.day{
  display:flex;
  flex-flow:row nowrap;
  justify-content:space-between;
  text-align:center;
  width:100%;
}
.day view{
  flex:1 1 auto;
}
.date{
  display:flex;
  flex-flow:row wrap;
  /* justify-content:space-between; */
  text-align:center;
  width:100%;
  line-height:1.8rem;
  margin:20rpx 0;
  border-top:#ccc solid 1rpx;
  border-bottom:#ccc solid 1rpx;
  font-size:40rpx;
}
.date .sum{
  display:flex;
  flex-flow:column nowrap;
  align-items:center;
}
.item .price{
  color:red;
  font-size:25rpx;
  line-height:1;
}
.item .num{
  color:#999;
  font-size:25rpx;
  line-height:1;
}
.date .item{
  width:107rpx;
  overflow:hidden;
  
}
.title{
  text-align:center;
  line-height:3;
  font-size:50rpx;
}